<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecord.AddCompanyData">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit car"
                     Icon="edit.png"
                     Order="Primary"/>
        <ToolbarItem Text="Settings"
                     Order="Secondary"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Margin="10">
            <Entry x:Name="CompanyName" Placeholder="Cég neve" />
            <Entry x:Name="CompanyAddress" Placeholder="Cég címe" />
            <Entry x:Name="CompanyVAT" Placeholder="Adószám" />
            <Button Text="Rendben" Clicked="Button_AddCompanyDataToDB"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>