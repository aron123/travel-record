<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecord.AddCarData">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit car"
                     Icon="edit.png"
                     Order="Primary"/>
        <ToolbarItem Text="Settings"
                     Order="Secondary"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10">
                <Label FontSize="Medium" Text="Adja meg az autó adatait!"/>
                <Label FontSize="Small" HorizontalOptions="FillAndExpand"
                       Text="Az adatok megadása nem kötelező, illetve azok valódisága nem kerül ellenőrzésre. Az adatok csak az Ön eszközén kerülnek tárolásra, azokhoz a program fejlesztője nem fér hozzá."/>

                <Label>Rendszám:</Label>
                <Entry x:Name="LicensePlateNumber" Placeholder="Rendszám" />
                <Label>Modell: </Label>
                <Entry x:Name="CarModel" Placeholder="Modell" />
                
                <Button Text="Rendben" Clicked="Button_SaveCarData"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>