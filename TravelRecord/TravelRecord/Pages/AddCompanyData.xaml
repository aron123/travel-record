<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecord.AddCompanyData"
             Title="Alapadatok">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10">
                <Label FontSize="Medium" Text="Adja meg adatait!"/>
                <Label FontSize="Small" HorizontalOptions="FillAndExpand"
                       Text="Az adatok megadása nem kötelező, illetve azok valódisága nem kerül ellenőrzésre. Az adatok csak az Ön eszközén kerülnek tárolásra, azokhoz a program fejlesztője nem fér hozzá."/>

                <Label>Cég vagy magánszemély neve:</Label>
                <Entry x:Name="CompanyName" Placeholder="Név" />
                <Label>Cím:</Label>
                <Entry x:Name="CompanyAddress" Placeholder="Cím" />
                <Label>Adószám:</Label>
                <Entry x:Name="CompanyVAT" Placeholder="Adószám" />

                <Button Text="Rendben" Clicked="Button_SaveCompanyData"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>